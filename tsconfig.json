{
  "compilerOptions": {
    "target": "ES2020",                  // generowany JS w standardzie ES2020
    "module": "commonjs",                // Node używa commonjs
    "outDir": "dist",                     // folder na wygenerowany JS
    "rootDir": "discord-bot/src",         // folder z TS
    "strict": true,                        // włącza wszystkie opcje strict
    "esModuleInterop": true,              // pozwala importować moduły CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                  // pomija sprawdzanie typów w node_modules
  },
  "include": ["discord-bot/src/**/*"],   // wszystkie pliki TS w src
  "exclude": ["node_modules", "dist"]    // wyklucza node_modules i dist
}